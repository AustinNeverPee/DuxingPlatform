      </a>
    </div><!-- /二级菜单按钮-->

    <!-- 页面主要内容 -->
    <div class="container holder">
      <div class="jumbotron">
        <div class="row">
          <!-- 左侧筛选框 -->
          <div class="searchBox well col-md-2">
          <form role="form">
            <div class="input-group">
               <input type="text" class="form-control">
               <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></strong></span>
            </div>
          </form>
          </div><!-- /左侧筛选框 -->

          <!-- 右侧-->
          <div class="showLog well col-md-10">
            <div class="logContainer row" id="accordion">
              <!-- 插入日志 -->
            </div>
            <button id="moreButton" class="btn btn-primary btn-lg btn-block">更多</button>
          </div><!-- /右侧-->
        </div>
      </div><!-- /.jumbotron -->
    </div><!-- /页面主要内容 -->
    
    <!-- 页脚 -->
    <div class="container footer">
      <div class="col-xs-12" id="copyrights">

      </div>
    </div><!-- /页脚 -->
    
