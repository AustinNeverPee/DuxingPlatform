    $(window).scroll(function(){
        if(delay == 1){
        	delay = 0;
        	setTimeout(function(){
    		    if($(document).height()-$(this).scrollTop()-$(this).height()<100 && canAddPhoto == 1)
                    {
                        moreAlbum();
