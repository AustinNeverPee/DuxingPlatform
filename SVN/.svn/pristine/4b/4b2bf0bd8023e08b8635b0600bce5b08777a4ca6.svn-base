<extend name="../welfare/Home/View/Tpl/base.html" />

<block name="title">
  <title>活动反馈表</title>
</block>

<block name="css">
  <link href="{$static}/css/activity_feedback.css" rel="stylesheet" type="text/css" media="screen">
</block>

<block name="menu">
  <div class="btn-group-vertical levelTwo">
    <a href="#" id="activityNameHref" class="btn btn-info" role="button">
      活动名
    </a>
    <a href="#" id="feedbackHref" class="btn btn-info" role="button">
      查看反馈表
    </a>
    <a href="#" class="btn btn-info" role="button">活动日志</a>
    <a href="#" class="btn btn-info" role="button">活动相册</a>
  </div>
</block>

<block name="main">
  <div class="container holder">
    <div class="jumbotron">
      <div class="row">
        <!-- 左侧-->
        <div class="col-md-2 well">
        </div>
          
        <!-- 右侧-->
        <div class="col-md-10" id="main-box" role="main">
          <div class="row">
            <!-- b面板标题 -->
            <div class="page-header"><h2>活动反馈表</h2></div>

                <!-- 当没有反馈表时，这部分提示显示 -->
              <div class="alttext" style="visibility:hidden;color:red;">此活动还没有上传反馈表</div>
                
                <!-- 反馈表内容 -->
               <div class="feedbacktable">
                  <ul class="list-group">
                    <li class="list-group-item">
                      <div class="actname">
                        <h3><b>活动名称</b></h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                      <div class="feedrelsite">
                        <h3><b>活动地点</b></h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                      <div class="feeduser">
                        <h3><b>反馈者</b></h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                        <div class="feeddate">
                          <h3><b>反馈时间</b></h3>
                        </div>
                    </li>

                    <li class="list-group-item">
                      <div class="actdate">
                        <h3><b>活动时间</b></h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                        <div class="actperiod">
                          <h3><b>活动周期</b></h3>
                        </div>
                    </li>
                    <li class="list-group-item">
                      <div class="actleader">
                        <h3><b>活动发起者</b></h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                      <div class="schoolstate">
                        <h3><b>学校近三年危房改造状态</b></h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                      <div class="studentnum">
                        <h3><b>学校学生总人数</b></h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                      <div class="gradenum">
                        <h3><b>学校年级数</b></h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                      <div class="classnum">
                        <h3><b>学校班级数量</b></h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                       <div class="studentstate">
                          <h3><b>学生状况</b></h3>
                        </div>
                    </li>

                    <li class="list-group-item">
                       <div class="teacherstate">
                          <h3><b>教师状况</b></h3>
                        </div>
                    </li>

                    <li class="list-group-item">
                       <div class="buildingstate">
                          <h3><b>学校建筑物状况</b></h3>
                        </div>
                    </li>

                    <li class="list-group-item">
                      <div class="libstate">
                        <h3><b>学校图书馆描述</b></h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                      <div class="otherstate">
                        <h3><b>其他物资状况</b></h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                        <div class="organizationstate">
                          <h3><b>当地是否已建立少年社</b></h3>
                        </div>
                    </li>

                    <li class="list-group-item">
                      <div class="infrastructure">
                        <h3><b>基础设施状况</b></h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                        <div class="evaluate">
                          <h3><b>麦田团队评估</b></h3>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="advice">
                          <h3><b>麦田团队建议</b></h3>
                        </div>
                    </li>

                  </ul>
               </div>
          </div>

        </div><!-- /右侧-->

      </div><!-- /.row -->
    </div><!-- /.jumbortron -->
  </div>
</block>
    
<block name="js">
  <script src="{$static}/js/activity_feedback.js" type="text/javascript"></script>
  <script src="{$static}/js/jquery.uploadify.min.js" type="text/javascript"></script>
</block>