<extend name="../welfare/Home/View/Tpl/base.html" />

<block name="title">
  <title>活动相册</title>
</block>

<block name="css">
  <link href="{$static}/css/activity_display.css" rel="stylesheet" type="text/css" media="screen">
  <link href="{$static}/css/fsgallery.css" rel="stylesheet" />
</block>

<block name="menu">
  <div class="btn-group-vertical levelTwo">
    <a href="" id="activityNameHref" class="btn btn-info" role="button">
      活动名
    </a>
    <a href="" id="feedbackHref" class="btn btn-info" role="button">
      查看反馈表
    </a>
    <a href="" id="blogHref" class="btn btn-info" role="button">活动日志</a>
    <a href="" id="albumHref" class="btn btn-info" role="button">活动相册</a>
  </div>
</block>

<block name="main">
  <div class="container holder">
    <div class="jumbotron">
      <div class="row">
        <!-- 左侧-->
        <div class="col-sm-2">
          <div class="well" id="poster">
            <!-- 这是海报预留区域 -->
          </div>
          

          <div class="information">
            <h2>活动名</h2>
            <div>
              <span class="infolabel">时间：</span>
              <span id="time"></span>
            </div>

            <div>
              <span class="infolabel">地点：</span>
              <span id="location1"></span>
            </div>

            <div>
              <span class="infolabel">类型：</span>
              <span id="type"></span>
            </div>

            <div>
              <span class="infolabel">组织者：</span>
              <span id="organizer">
                <a href="">Amin</a>
                <a href="">Amin</a>
              </span>
            </div>
          </div><!-- /.information -->
        </div><!-- /左侧-->

        <!-- 右侧-->
        <div class="col-sm-10" id="main-box" role="main">
          <!-- 占位-->

          

          <!-- photo -->
          <div id="gallery" class="row">
            <!-- 相册封面填充 -->
            
          </div>
          <!-- end photo -->
          

          
         
        </div><!-- /右侧-->
      </div><!-- /.row -->
    </div><!-- /.jumbotron -->
  </div>
</block>
    
<block name="js">
  <script src="{$static}/js/fs_forse.js"></script>
  <script src="{$static}/js/activity_feedback.js"></script>
</block>