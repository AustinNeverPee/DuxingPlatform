h4.title {
	font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
}

div.content {
	border-bottom-style: solid;
  border-bottom-color: grey;
  border-bottom-width: 2px;
  margin: 10px;
  padding: 10px;
}

div.comment {
	border-top-width: 25px;
}

.touid{
	display: none;
}

.comname{
	font-size: 15px;
	font-weight:bold;
}

.time{
    padding-left: 15px; 
    padding-right: 5px;
	font-size: 13px;
	color: grey;
}

#follower {
    zoom:1;
    overflow: hidden;
}

.follow {
    word-wrap:break-word;
    word-break:normal;
    zoom:1;
    overflow: hidden;
}

#poster > img {
  width: 90%;
}

.information {
  text-align: left;
}

.information .infolabel {
  font-weight: bolder;
}

.information h2,h3 {
  font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
}


#gallery {
  margin-top: 10px;
  border-radius: 10px;
  border: double 3px rgba(157, 142, 142, 0.5);
}

#gallery > .col-md-2 > a > img {
  height: 100px;
}

#gallery > .col-md-4 > a > img {
  height: 230px;

}




