/*防止页面内容缺乏时样式奇怪*/
#main-box,#filter-box{
  min-height: 500px;
}
/*一个相册的高度*/
.photoBlock{
	height: 300px;
	background-color: #e77919;
	color: #ffffff;
	width: 800px;
	margin-top: 50px;
}
/*每张照片的样式,防止照片过大，突出*/
.photoBlock img{
	max-height: 240px;
	max-width: 320px;
	min-height: 220px;
	margin-top: auto;
	margin-left: auto;
	margin-right: auto;
	margin-bottom: auto;
}

.photoBox{
	background-color: #ffffff;
}

small {
	color: #ffffff!important;
}