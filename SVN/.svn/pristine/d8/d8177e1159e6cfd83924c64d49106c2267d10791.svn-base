.img-wrap {
  display: block; 
}



.img-wrap > img {
  height: 100px;
  border:3px solid rgba(45, 28, 28, 0.31);
  border-radius: 50%;
}

.img-wrap > img:hover {
  border:1px solid rgba(13, 34, 250, 0.8);

  -webkit-transition: all .2s ease-in-out;
  -o-transition: all .2s ease-in-out;
  transition: all .2s ease-in-out;
}
