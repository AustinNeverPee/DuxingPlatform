<extend name="../welfare/Home/View/Tpl/base.html" />

<block name="title">
  <title>创建反馈</title>
</block>

<block name="css">
  <link href="{$static}/css/activity_newfeedback.css" rel="stylesheet" type="text/css" media="screen">
</block>

<block name="menu">
  <div class="btn-group-vertical levelTwo">
    <a href="#" class="btn btn-info" role="button" id="activityNameHref">
      活动名
    </a>
    <a href="feedbacktable.html" class="btn btn-info" role="button" id="feedbackHref">
      查看反馈
    </a>
    <a href="#" class="btn btn-info" role="button" id="joinHref">
      报名参加
    </a>
    <a href="#" class="btn btn-info" role="button" id="actalbum">
      活动相册
    </a>
  </div>
</block>

<block name="main">
  <div class="container holder">
    <div class="jumbotron">
      <div class="row">
        <!--左侧-->
        <div class="col-md-2 sidebar well">
        </div>

        <!--右侧-->
        <div class="col-md-10 " id="main-box">
          <div class="row">
            <div class = "col-md-11 col-md-offset-1 well">

              <form role="form" class="feedback-new form-horizontal">

                <div class="form-group">
                    <label for="InputActivity">活动名称</label>
                    <input name="organizer" type="text" class="form-control" id="InputActivity" readonly="readonly" value="活动名称">
                  </div>

                <div class="form-group">
                    <label for="InputSite">活动地点</label>
                    <input name="organizer" type="text" class="form-control" id="InputSite" readonly="readonly" value="活动地点">
                  </div>

                <div class="form-group">
                  <label for="InputTime">活动时间:</label>
                   <input name="organizer" type="text" class="form-control" id="InputTime" readonly="readonly" value="活动时间">
                </div>

                <div class="form-group">
                  <label for="InputPeriod">活动周期:</label>
                  <input name="organizer" type="text" class="form-control" id="InputPeriod" readonly="readonly" value="活动时间">
                </div>

                <!-- <div class="form-group">
                    <label for="InputOrganizer">活动发起者</label>
                    <input id="InputOrganizer" type="text" readonly="readonly" value="活动发起者" />
                  </div> -->

                  <div class="form-group">
                    <label for="InputStatue">学校近三年危房改造状态</label>
                    <textarea name="volunteer" class="form-control" id="InputStatue" placeholder=""></textarea>
                  </div>

                  <div class="form-group">
                    <label for="InputTotalstu">学校学生总人数</label>
                    <input id="InputTotalstu" type="number" />
                  </div>

                  <div class="form-group">
                    <label for="InputGrade">学校年级数</label>
                    <input name="volunteer"  id="InputGrade" type="number" />
                  </div>

                  <div class="form-group">
                    <label for="InputClass">学校班级数</label>
                    <input name="volunteer"  id="InputClass" type="number" />
                  </div>

                  <div class="form-group">
                    <label for="InputStudent">学生状况</label>
                    <textarea name="volunteer" class="form-control" id="InputStudent" placeholder=""></textarea>
                  </div>

                  <div class="form-group">
                    <label for="InputTeacher">教师状况</label>
                    <textarea name="volunteer" class="form-control" id="InputTeacher" placeholder=""></textarea>
                  </div>

                  <div class="form-group">
                    <label for="InputArchitecture">学校建筑物状况</label>
                    <textarea name="volunteer" class="form-control" id="InputArchitecture" placeholder=""></textarea>
                  </div>

                  <div class="form-group">
                    <label for="InputLibrary">学校图书馆描述</label>
                    <textarea name="volunteer" class="form-control" id="InputLibrary" placeholder=""></textarea>
                  </div>

                  <div class="form-group">
                    <label for="InputMaterial">其他物资状况</label>
                    <textarea name="volunteer" class="form-control" id="InputMaterial" placeholder=""></textarea>
                  </div>

                  <div class="form-group">
                    <label for="InputYouthClub">当地是否已建立少年社</label>
                    <input name="volunteer" class="form-control" id="InputYouthClub" placeholder="" />
                  </div>

                  <div class="form-group">
                    <label for="InputInfrastructure">基础设施状况</label>
                    <textarea name="volunteer" class="form-control" id="InputInfrastructure" placeholder=""></textarea>
                  </div>

                  <div class="form-group">
                    <label for="InputEstimate">麦田团队评估</label>
                    <textarea name="volunteer" class="form-control" id="InputEstimate" placeholder=""></textarea>
                  </div>

                  <div class="form-group">
                    <label for="InputSuggest">麦田团队建议</label>
                    <textarea name="volunteer" class="form-control" id="InputSuggest" placeholder=""></textarea>
                  </div>

                <div class="form-group">
                  <div class="col-sm-offset-5">
                    <button type="button" class="btn btn-default" id="submitButton">发布</button>
                  </div>
                </div>
              </form><!--结束提交表单-->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</block>
    
<block name="js">
  <script src="{$static}/js/activity_newfeedback.js" type="text/javascript"></script>
</block>