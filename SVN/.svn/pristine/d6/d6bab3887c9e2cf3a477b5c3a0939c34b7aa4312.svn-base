<extend name="../welfare/Home/View/Tpl/base.html" />

<block name="title">
  <title>活动反馈表</title>
</block>

<block name="css">
  <link href="{$static}/css/activity_feedback.css" rel="stylesheet" type="text/css" media="screen">
</block>

<block name="menu">
  <div class="btn-group-vertical levelTwo">
    <a href="#" id="activityNameHref" class="btn btn-info" role="button">
      活动名
    </a>
    <a href="#" id="feedbackHref" class="btn btn-info" role="button">
      查看反馈
    </a>
    <a href="#" class="btn btn-info" role="button">查看日志</a>
    <a href="#" class="btn btn-info" role="button">查看相册</a>
    <a href="activity_sign_up.html" id="joinHref" class="btn btn-info" role="button">
      报名参加
    </a>
  </div>
</block>

<block name="main">
  <div class="container holder">
    <div class="jumbotron">
      <div class="row">
        <!-- 左侧-->
        <div class="col-md-2 well">
          <form role="form">
            <div class="input-group">
               <input type="text" class="form-control">
               <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></strong></span>
            </div>
          </form>
        </div>
          
        <!-- 右侧-->
        <div class="col-md-10" id="main-box" role="main">
          <div class="row">
            <!-- b面板标题 -->
            <div class="page-header"><h2>活动反馈表</h2></div>

                <!-- 当没有反馈表时，这部分提示显示 -->
              <div class="alttext" style="visibility:hidden;color:red;">此活动还没有上传反馈表</div>
                
                <!-- 反馈表内容 -->
               <div class="feedbacktable">
                  <ul class="list-group">
                    <li class="list-group-item">
                      <div class="feedrelsite">
                        <h3>活动地点</h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                      <div class="feeduser">
                        <h3>反馈者</h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                        <div class="feeddate">
                          <h3>反馈时间</h3>
                        </div>
                    </li>

                    <li class="list-group-item">
                      <div class="actdate">
                        <h3>活动时间</h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                        <div class="actperiod">
                          <h3>活动周期</h3>
                        </div>
                    </li>
                    <li class="list-group-item">
                      <div class="actleader">
                        <h3>活动发起者</h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                      <div class="">
                        <h3>学校修复状态</h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                      <div class="">
                        <h3>学校学生总人数</h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                      <div class="">
                        <h3>学校年级数</h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                      <div class="">
                        <h3>学校班级数量</h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                       <div class="">
                          <h3>学生状态</h3>
                        </div>
                    </li>

                    <li class="list-group-item">
                       <div class="">
                          <h3>学校教师状态</h3>
                        </div>
                    </li>

                    <li class="list-group-item">
                       <div class="">
                          <h3>学校建筑物状态</h3>
                        </div>
                    </li>

                    <li class="list-group-item">
                      <div class="">
                        <h3>学校图书馆描述</h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                      <div class="">
                        <h3>其他描述</h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                        <div class="">
                          <h3>当地是否已建立少年社</h3>
                        </div>
                    </li>

                    <li class="list-group-item">
                      <div class="">
                        <h3>基础设施描述</h3>
                      </div>
                    </li>

                    <li class="list-group-item">
                        <div class="">
                          <h3>麦田团队评估</h3>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="">
                          <h3>麦田团队建议</h3>
                        </div>
                    </li>

                  </ul>
               </div>
          </div>

        </div><!-- /右侧-->

      </div><!-- /.row -->
    </div><!-- /.jumbortron -->
  </div>
</block>
    
<block name="js">
  <script src="{$static}/js/activity_feedback.js" type="text/javascript"></script>
  <script src="{$static}/js/jquery.uploadify.min.js" type="text/javascript"></script>
</block>